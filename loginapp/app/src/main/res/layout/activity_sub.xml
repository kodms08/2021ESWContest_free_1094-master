<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/kakaotalk_20210716_130131343"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="90dp"
        android:hint="TEXTVIEW"/>


    <ImageButton
        android:id="@+id/sub_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:maxHeight="180dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mail_naver" />

    <ImageButton
        android:id="@+id/sub_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:maxHeight="180dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/_f850354_ac2e_489b_946a_af5c27868d20__1_" />

    <ImageButton
        android:id="@+id/sub_ex"
        android:layout_width="415dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="450dp"
        android:maxHeight="180dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/_dad9c34_a00a_4c06_aa1a_0d3871f3d268" />

    <EditText
        android:id="@+id/et_phone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="비상연락처1"
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_phone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="비상연락처2"
        android:inputType="phone" />

</LinearLayout>